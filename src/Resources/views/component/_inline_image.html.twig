{#
    image_src
    image_alt
    rounded             boolean
    image_class
    gallery_class

        xs: #576px
        sm: #768px
        md: #992px
        lg: #1200px
        xl: #1200px+
#}

{% if image_src is defined %}
<p class="{{ gallery_class|default('mimg') }}">
        {{ link(''
        ~'<img'
        ~' srcset="'
            ~ image_src|replace({'/default/':'/xs/'}) ~' 576w'
            ~','~ image_src|replace({'/default/':'/sm/'}) ~' 768w'
            ~','~ image_src|replace({'/default/':'/md/'}) ~' 992w'
            ~','~ image_src|replace({'/default/':'/lg/'}) ~' 1200w'
            ~','~ image_src|replace({'/default/':'/xl/'}) ~' 1600w'
        ~'"'
        ~' src="'~ image_src ~'" loading="lazy"'
        ~' class="' ~ (rounded is defined ? 'rounded':'') ~ (image_class is defined ? ' '~image_class : ' img-fluid') ~ '"'
        ~' alt="' ~ image_alt ~'">',
        image_src) }}
    </p>
{% endif %}
