    {% if isInternalImage(image_src) %}
        {% set image =  getImageFrom(image_src) %}
        {{ image_link is not defined ? link(
            _self.renderImage(image, image_class ?? null, image_attr ?? null, image_alt ?? null),
            image.fullPath|imagine_filter('default'),
