{% extends '@SonataAdmin/CRUD/list.html.twig' %}

{% macro renderLink(page) %}
    <a href="{{ path('admin_app_page_edit', {'id': page.id}) }}">
        <span class="badge btn-primary">{{ page.slug }}</span>
        {{ (page.h1 ? page.h1 : page.title)|striptags }}
    </a>
    ({{ page.updatedAt|date('d/m/y') }}{{ page.metaRobots == 'noindex' ? ', <span class="badge">noindex</span>':'' }})
{% endmacro %}

{% macro renderListItem(page, checked = false) %}
    {% if page.childrenPages.count > 0 %}
        <input type="checkbox" {{ checked ? 'checked="checked"' : '' }} id="i-{{ page.id }}" data-sonata-icheck=false />
        <label class="tree_label" for="i-{{ page.id }}">{{ page.childrenPages.count }}</label>
        {{ _self.renderLink(page) }}
        {{ _self.renderTree(page.childrenPages) }}
    {% else %}
        <label class="tree_label tree_label_empty" for="i-{{ page.id }}">0</label>
        {{ _self.renderLink(page) }}
    {% endif %}
{% endmacro %}

{% macro renderTree(pages) %}
    <ul>
          {% for page in pages %}
                <li>
                    {{ _self.renderListItem(page) }}
                </li>
            {% endfor %}
        </ul>
{% endmacro %}

{% block list_table %}
    {% include '@SonataTwig/FlashMessage/render.html.twig' %}
<div class="col-xs-12 col-md-12">
<div class="box box-primary" style="margin-bottom: 100px;">
             <div class="box-header">
                <h3 class="box-title">Arborescence</h3>
            </div>
   <div class="box-body">
      <ul class=tree>
          {% for page in pages %}
                <li>
                    {{ _self.renderListItem(page, true) }}
                </li>
            {% endfor %}
        </ul>
   </div>
</div>
</div>

    {% block sonata_admin_tree_style %}
    <style>
    .tree {
        margin-top: 20px;
        margin-left: 30px;
    }

    .tree,
    .tree ul {
        list-style-type: none;
        padding: 0;
    }

    .tree input {
        position: absolute;
        clip: rect(0, 0, 0, 0);
    }

    .tree input~ul {
        display: none;
    }

    .tree input:checked~ul {
        display: block;
    }

    .tree li {
        line-height: 1.2;
        position: relative;
        padding: 0 0 1em 1em;
    }

    .tree ul li {
        padding: 1em 0 0 1em;
    }

    .tree>li:last-child {
        padding-bottom: 0;
    }

    .tree_label {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    .tree_label {
        background: #eee;
        padding: .2em .6em .3em;
        border-radius: 0.25em;
        color: #337ab7;
        border: 1px solid #ddd;
        margin-right:20px;
        min-width:30px;
        text-align:center;
    }

    .tree_label_empty {
        color: #eee;
    }

    :checked~.tree_label {
        border-color: #337ab7;
        background: #337ab7;
        color: #fff;
    }
    </style>
    {% endblock %}
{% endblock %}

