{% extends view('/base.html.twig', twig) %}

{# ----------- #}

{% block html_opener %}
	<html
		lang="{{ page.locale|default(apps.get().defaultLocale) }}"
		{% if page.htmlOpenerAttr %}{{ mergeAttr({'class': 'leading-tight text-gray-900'}, page.htmlOpenerAttr|default({})) }}
		{% else %} class="leading-tight text-gray-900"{% endif %}
	>
{% endblock %}

{% block title %}
	{{ page.getTitle(true)|striptags }}
{% endblock %}

{% block robots %}
	{% if page.searchExcrept is defined and page.searchExcrept is not null %}
		<meta name="description" content="{{ page.searchExcrept|escape }}">
	{% endif %}

	{% if page.metaRobots is defined and page.metaRobots is not null %}
		<meta name="robots" content="{{ page.metaRobots }}">
	{% endif %}

	<link rel="canonical" href="{{ page(page, true) }}"/>

{% endblock %}


{% block alternate_language %}
	{% if page.locale is not null %}
		<link rel="alternate" hreflang="{{ page.locale }}" href="{{ page(page, true) }}"/>
		{% for translation in page.translations %}
			<link rel="alternate" hreflang="{{ translation.locale }}" href="{{ page(translation, true) }}"/>
		{% endfor %}
	{% endif %}
{% endblock %}


{% block open_graph %}
	<meta name="og:title" content="{{ page.ogTitle|default(page.getTitle(true))|striptags }}">
	<meta name="og:url" content="{{ page(page, true) }}">
	{% if page.searchExcrept %}
		<meta name="og:description" content="{{ page.ogDescription|default(page.searchExcrept)|striptags }}">
	{% endif %}
	{% if page.mainImage is defined and page.mainImage is not null %}
		<meta name="og:image" content="{{ apps.get().baseUrl|default('') }}{{ (page.mainImage.fullPath)|imagine_filter('default') }}">
	{% endif %}
{% endblock %}

{% block feed %}
	{# TODO #}
	{{ parent() }}
	{% if page.feeds is defined and page.feeds is not null %}
		{% for feed in page.feeds %}
			<link
				rel="alternate"
				type="{{ feed.type|default('application/rss+xml') }}"
				href="{{ apps.get().baseUrl|default('') }}{{ feed.uri }}"
				title="{{ app_name|default('') }} &raquo; {{ feed.title }}"
			/>
		{% endfor %}
	{% endif %}
{% endblock %}


{% block body %}

	{% block content %}
		<div class="{{ page.container|default('max-w-screen-md mx-auto p-3 prose prose-sm sm:prose lg:prose-lg xl:prose-xl') }}">

			{% block h1 %}
				<h1>{{ page.content.title(true)|raw }}</h1>
			{% endblock %}

			{% block description %}
                {{ page.content.chapeau|raw }}
			{% endblock %}

			{% block main_image %}
				{% if page.mainImage is not null %}
					{% include view('/component/_inline_image.html.twig') with {
							'image_src': page.mainImage.fullPath|imagine_filter('default'),
							'image_alt': page.mainImage.name(page.locale, true)|default(page.getTitle(true)|striptags),
							'image_wrapper_class': ' ',
						} %}
				{% endif %}
			{% endblock %}


			{% block main_content %}
                {{ page.content.body|raw }}
			{% endblock %}


		</div>
	{% endblock %}

	{% block breadcrumb %}
		{% include '@PiedWebCMS/page/_breadcrumb.html.twig' %}
	{% endblock %}

	{% block footer %}
		{% include '@PiedWebCMS/page/_footer.html.twig' %}
	{% endblock %}

	{% block navbar %}
		{% include '@PiedWebCMS/page/_navbar.html.twig' %}
	{% endblock %}
{% endblock %}

{% block html_closer %}
	</html>
{% endblock %}
