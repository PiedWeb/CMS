{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block title %}
- Suppression d'un fichier thème
{% endblock %}

{% block sonata_admin_content %}
    {% if message is defined %}
        <p class="alert alert-success">{{ message|trans }}</p>
    {% else %}
       {{ form_start(form) }}
        <div class="box box-danger">
             <div class="box-header">
                <h3 class="box-title">Confirmation de suppression</h3>
            </div>
            <div class="box-body">
                Êtes-vous sûr de vouloir supprimer l'élément <code>{{ element.path }}</code> sélectionné?
            </div>
            <div class="box-footer clearfix">
                {{ form_widget(form) }}


            </div>
        </div>
    {% endif %}

{% endblock %}
