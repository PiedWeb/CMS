            if (!document.getElementById('previewf')) {
                customPreview(plainText, preview);
            }
            document.addEventListener('keyup', function (e) {
                clearTimeout(timeoutPreviewRender);
                timeoutPreviewRender = setTimeout(function () {
                    customPreview(plainText, preview)
                }, 1000);
            });
        },
        /**/
    });
      });
