{
  "name": "piedweb/cms-theme-skeleton",
  "type": "symfony-bundle",
  "description": "Default Theme for Pied Web CMS... Skeleton by the way.",
  "keywords": [],
  "homepage": "https://piedweb.com",
  "license": "MIT",
  "require": {},
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.17",
    "friendsoftwig/twigcs": "^4.0",
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/phpunit-bridge": "^5.0",
    "vimeo/psalm": "^4.3"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "PiedWeb\\CMSThemeSkeleton\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "Skeleton/src",
      "PiedWeb\\CMSThemeSkeleton\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Robin@PiedWeb",
      "email": "contact@piedweb.com",
      "homepage": "https://piedweb.com"
    }
  ],
  "scripts": {
    "psalm": "vendor/bin/psalm --no-suggestions",
    "test": "vendor/bin/phpunit",
    "tests": "composer update --prefer-lowest && composer test && composer update && composer test",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix",
    "easy-hack": "./src/Extension/Admin/assets/easymde-hack",
    "assets": "yarn install && composer easy-hack && yarn build",
    "upgrade-assets": "yarn upgrade && composer assets"
  }
}
